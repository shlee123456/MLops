{
  "uid": "logs-dashboard",
  "title": "Unified Logs Dashboard",
  "tags": [
    "mlops",
    "logs"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 0,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "endpoint",
        "label": "Endpoint",
        "type": "textbox",
        "current": {
          "text": ".*",
          "value": ".*"
        },
        "options": [],
        "query": ".*",
        "hide": 0
      },
      {
        "name": "model",
        "label": "Model",
        "type": "textbox",
        "current": {
          "text": ".*",
          "value": ".*"
        },
        "options": [],
        "query": ".*",
        "hide": 0
      },
      {
        "name": "status_code",
        "label": "Status Code",
        "type": "custom",
        "current": {
          "text": "All",
          "value": "$__all"
        },
        "options": [],
        "query": "200,400,401,403,404,500,502,503",
        "includeAll": true,
        "allValue": ".*",
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "type": "logs",
      "title": "All Application Logs",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "{service=\"mlops\"} | json | path=~\"$endpoint\" | status_code=~\"$status_code\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 10
      },
      "type": "logs",
      "title": "Training Logs",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"training\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 10
      },
      "type": "logs",
      "title": "FastAPI Logs",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"fastapi\"} | json | path=~\"$endpoint\" | status_code=~\"$status_code\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 18
      },
      "type": "logs",
      "title": "System Logs",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"system\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 5,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "type": "logs",
      "title": "Error Logs (All Services)",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "{service=\"mlops\", level=\"error\"} | json | path=~\"$endpoint\" | status_code=~\"$status_code\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 6,
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "type": "bargauge",
      "title": "Log Level Distribution",
      "datasource": {
        "uid": "loki",
        "type": "loki"
      },
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({job=\"fastapi\"} | json [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    }
  ]
}
