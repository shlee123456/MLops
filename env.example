# MLOps Project Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# Application Settings
# ===========================================
APP_NAME=MLOps Chatbot API
APP_VERSION=1.0.0
DEBUG=false

# ===========================================
# FastAPI Server
# ===========================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8080

# ===========================================
# vLLM Server
# ===========================================
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_TIMEOUT=60

# Model configuration
MODEL_PATH=/models/base/meta-llama/Meta-Llama-3-8B-Instruct
GPU_MEMORY_UTILIZATION=0.9
MAX_MODEL_LEN=4096

# ===========================================
# Database
# ===========================================
# SQLite (Development)
DATABASE_URL=sqlite+aiosqlite:///./mlops_chat.db

# PostgreSQL (Production - uncomment to use)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mlops_chat

# ===========================================
# Authentication
# ===========================================
ENABLE_AUTH=false
API_KEY=your-secret-api-key-change-in-production

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=*

# ===========================================
# MLflow
# ===========================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio123

# ===========================================
# MinIO
# ===========================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123

# ===========================================
# PostgreSQL (MLflow backend)
# ===========================================
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_DB=mlflow

# ===========================================
# Grafana
# ===========================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# ===========================================
# HuggingFace (Model Downloads)
# ===========================================
HF_HOME=./models/base
# HF_TOKEN=your-huggingface-token  # Required for gated models
